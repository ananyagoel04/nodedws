<%- include("header.ejs") %>

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://fonts.googleapis.com/css?family=Gochi Hand" rel="stylesheet" />

        <style>
            .background {
                background-color: #f3f0fc;
            }

            input[type="number"]::-webkit-inner-spin-button,
            input[type="number"]::-webkit-outer-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }
        </style>
    </head>

    <body>

        <div class="md:flex bg-[#f3f0fc] rounded-b-[60%] relative">
            <div class="block mx-auto my-auto md:w-2/4 p-8 md:mb-auto -mb-16 lg:pl-24 md:pl-20">
                <div
                    class="bg-[#D2C6FA] rounded-3xl w-fit my-4 p-2 md:mx-0 mx-auto text-center text-[#4F49A5] font-semibold rotate-[-1deg]">
                    Contact us Today
                </div>
                <div class="font-extrabold md:text-6xl text-4xl md:mx-0 mx-auto md:text-left text-center">
                    We'd love to hear from you
                </div>
                <div class="font-medium leading-8 md:text-left text-center">
                    Praesent sapien massa, convallis a pellentesque nec, egestas non nisi. Mauris blandit aliquet elit,
                    eget
                    tincidunt nibh pulvinar a.
                </div>
            </div>
            <div class="md:w-2/4 xl:pl-32 lg:pr-10 relative mx-auto lg:p-10 p-4">
                <img class="md:w-32 w-16 relative md:-bottom-24 -bottom-12  md:left-14 left-60"
                    src="/static/icons/dots1.svg" alt="">
                <div class="flex justify-center w-full relative h-fit ">
                    <form action="/contact" method="POST" onsubmit="return checkForm()"
                        class=" bg-white shadow-2xl w-full z-10 p-10 md:px-14 border-2 rounded-2xl">
                        <div class="text-3xl font-bold text-center md:text-left">Send us a message</div>
                        <br>
                        <label for="">Name*</label>
                        <br>
                        <input type="text" placeholder='Name' required name="Name"
                            class="border-2 p-2 rounded-xl w-full h-10">
                        <br>
                        <label for="">Email*</label>
                        <br>
                        <input type="email" placeholder='xyz@gmail.com' name="Email"
                            class="border-2 p-2 rounded-xl w-full h-10">
                        <br>
                        <label for="">Phone</label>
                        <br>
                        <input type="tel" placeholder="Phone Number" name="Phone" required maxlength="10"
                            class="border-2 p-2 rounded-xl w-full h-10">
                        <br>
                        <label for="">Message</label>
                        <br>
                        <textarea name="Message" placeholder='Message' required id="" rows="4"
                            class=" w-full border-1 rounded-xl p-2 border-2"></textarea>
                        <br>
                        <button type="submit">
                            <div
                                class="p-2 lg:p-8 md:p-4 lg:py-4 md:py-2 w-fit text-center bg-[#F6C663] rounded-full text-lg font-medium my-auto hover:bg-[#F9BC3E]">
                                Send Message
                            </div>
                        </button>
                        <% if (errorMessage) { %>
                            <div id="error-message" class="text-red-500 text-center mt-4">
                                <p>
                                    <%= errorMessage %>
                                </p>
                            </div>
                            <% } %>

                                <!-- Success Message Block -->
                                <% if (successMessage) { %>
                                    <div id="success-message"
                                        class="text-green-500 text-center mt-4">
                                        <p>
                                            <%= successMessage %>
                                        </p>
                                    </div>
                                    <% } %>
                        <script>
                            function checkForm() {
                                // Check if all required fields are filled
                                var name = document.getElementsByName("Name")[0].value;
                                var email = document.getElementsByName("Email")[0].value;
                                var phone = document.getElementsByName("Phone")[0].value;
                                var resume = document.getElementsByName("Resume")[0].files[0];

                                var errorMessage = document.getElementById("error-message");
                                var successMessage = document.getElementById("success-message");

                                if (name === "" || email === "" || phone === "" || phone.length !== 10) {
                                    // Show the error message
                                    errorMessage.textContent = "Please fill out all the required fields.";
                                    errorMessage.style.display = "block";
                                    // Hide the success message
                                    successMessage.style.display = "none";
                                    // Prevent the form submission
                                    return false;
                                } else if (phone.length !== 10) {
                                    // Show the error message
                                    errorMessage.textContent = "Phone number must be exactly 10 digits.";
                                    errorMessage.style.display = "block";
                                    // Hide the success message
                                    successMessage.style.display = "none";
                                    // Prevent the form submission
                                    return false;
                                }
                            }
                        </script>

                    </form>
                    <img class="w-24 hidden md:flex rotate-0 top-28 my-auto -left-16 bottom-0 relative right-0 h-fit z-0"
                        src="/static/icons/dots1.svg" alt="">
                </div>
            </div>
        </div>
        <div class="uppercase md:text-6xl text-4xl font-bold p-12 pt-12 pb-0 text-center">
