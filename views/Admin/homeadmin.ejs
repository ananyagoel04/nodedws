<%- include("header.ejs") %>

<body class="bg-gray-100 font-sans text-gray-900">
    <!-- Main container -->
    <div class="container mx-auto p-8">
        <!-- Header Section -->
        <header class="mb-8">
            <h1 class="text-3xl font-bold text-center text-blue-600">HomePage</h1>
        </header>
        <section class="my-4">
            <!-- Home Images Section -->
            <% if (images && images.length> 0) { %>
                <!-- <h2 class="text-2xl font-semibold text-gray-800 mb-4">only one image can be upload</h2> -->
                <% } else { %>
                    <section class="bg-white p-6 rounded-lg shadow-md mb-8">
                        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Home Images</h2>
                        <form action="/admin/home" method="POST" enctype="multipart/form-data" class="space-y-4">
                            <div>
                                <label for="image_title" class="block text-sm font-medium text-gray-700">Image
                                    Title:</label>
                                <input type="text" id="image_title" name="image_title" placeholder="Enter Image Title"
                                    required
                                    class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            <div>
                                <label for="image" class="block text-sm font-medium text-gray-700">Upload Image:</label>
                                <input type="file" id="image" name="image" accept="image/*" required
                                    class="mt-1 block w-full text-sm text-gray-500 file:py-2 file:px-4 file:rounded-lg file:border file:border-gray-300 file:bg-gray-50 hover:file:bg-blue-100">
                            </div>
                            <div>
                                <button type="submit"
                                    class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Add
                                    Image</button>
                            </div>
                        </form>
                    </section>
                    <% } %>
                        <section>
                            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Existing Home Images</h2>
                            <table class="min-w-full bg-white rounded-lg shadow-md">
                                <thead>
                                    <tr class="bg-gray-200">
                                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Title</th>
                                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Image</th>
                                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (images && images.length> 0) { %>
                                        <% images.forEach(image=> { %>
                                            <tr class="border-b hover:bg-gray-50">
                                                <td class="px-4 py-2 text-sm text-gray-700">
                                                    <%= image.image_title %>
                                                </td>
                                                <td class="px-4 py-2 text-sm text-gray-700">
                                                    <img src="<%= image.image_url%>" loading="lazy"
                                                        alt="<%= image.image_title %>" width="100" class="rounded-md">
                                                </td>
                                                <td class="px-4 py-2 space-x-2">
                                                    <!-- Update Image Form -->
                                                    <form action="/admin/home/<%= image._id %>?_method=PUT"
                                                        method="POST" enctype="multipart/form-data"
                                                        style="display:inline-block;">
                                                        <input type="text" name="image_title"
                                                            value="<%= image.image_title %>" required
                                                            class="p-1 border border-gray-300 rounded-md">
                                                        <input type="file" name="image" accept="image/*"
                                                            class="p-1 text-sm border border-gray-300 rounded-md">
                                                        <button type="submit"
                                                            class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Update</button>
                                                    </form>

                                                    <!-- Delete Image Form -->
                                                    <form action="/admin/home/<%= image._id %>?_method=DELETE"
                                                        method="POST" style="display:inline-block;">
                                                        <button type="submit"
                                                            onclick="return confirm('Are you sure you want to delete this image?')"
                                                            class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3" class="text-center text-sm text-gray-500 py-4">
                                                            No images found.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </section>
        </section>
        <section class="my-4">
            <!-- Vision Mission Section -->
